@model ErrorViewModel
@{

    ViewData["Title"] = Model == null ? "Error" : Model.Title;
}

@{ 
    if(Model == null)
    {
        <div>
            <h2>Ooops! Error. Don't worries our team will see and correct as soon</h2>
        </div>
    }
    else
    {
        <h1>@Html.Raw(Model.Title)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Message)</h2>
    }
}